# ===================
# Backend
# ===================

# Server
API_PORT=9000
ENVIRONMENT=development

# Database
DATABASE_URL=postgres://postgres:password@localhost:5433/mindhit?sslmode=disable
DEV_DATABASE_URL=postgres://postgres:password@localhost:5433/mindhit_dev?sslmode=disable

# Auth
JWT_SECRET=your-secret-key-change-in-production

# Google OAuth (Phase 2.1)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Redis
REDIS_URL=redis://localhost:6380

# Worker
WORKER_CONCURRENCY=10

# AI Provider API Keys (Phase 10+)
# Provider/model selection is managed in DB via Admin API (Phase 10.1)
# At least one API key is required for AI features (tag extraction, mindmap generation)
# Leave empty to disable AI features
OPENAI_API_KEY=sk-proj-...
GEMINI_API_KEY=AIza...
CLAUDE_API_KEY=sk-ant-...

# ===================
# Docker Services
# ===================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=mindhit

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# ===================
# Frontend (Next.js)
# ===================

# API URL for client-side requests
NEXT_PUBLIC_API_URL=http://localhost:9000

# Google OAuth (Phase 2.1)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ===================
# Chrome Extension (Phase 8+)
# ===================

VITE_API_URL=http://localhost:9000/v1
